  <div class="field form-group">
    <%= form.text_field :name, class:"form-control", placeholder:"Name", :value=>"asd asd" %>
  </div>
  <br/>

  <div class="field form-group">
    <%= form.text_field :price, class:"form-control", placeholder:"Price", :value=>"15" %>
  </div>
  <br/>

  <div class="field form-group">
    <%= form.text_field :sale, class:"form-control", placeholder:"Sale" %>
  </div>
  <br/>

  <div class="field form-group">
    <!--<%a = Array.new(1,"def") %>-->
    <%b = Category.all.map{|c| [c.category, c.id]} %>
    <%= form.select :category_id, b%>
  </div>
  <br/>

  <div class="actions">
    <%= form.submit class:'btn btn-success' %>
  </div>
<% end %>
