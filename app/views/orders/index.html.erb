<h1>Orders</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Currency</th>
      <th>Name</th>
      <th>Price</th>
      <th>Sale</th>
      <th>Category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.currency %></td>
        <td><%= order.name %></td>
        <td><%= order.price %></td>
        <td><%= order.sale %></td>
        <td><%= order.category.category %></td>
        <td><%= link_to 'Show', order, class:"btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_order_path(order), class:"btn btn-warning" %></td>
        <td><%= link_to 'Destroy', order, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_order_path, class:"btn btn-success" %>
